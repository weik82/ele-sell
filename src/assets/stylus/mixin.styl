border-down-1px($color) {
  position: relative
  &::after {
    content: ''
    display: block
    position: absolute
    width: 100%
    left: 0
    bottom: 0
    border-bottom: 1px solid $color
  }
}

border-none() {
  &:after {
    display: none
  }
}

inline-block($pos) {
  display: inline-block
  vertical-align: $pos
}

bg-image($url) {
  background-image: url('./resource/' + $url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3) {
    background-image: url('./resource/' + $url + '@3x.png')
  }
}
